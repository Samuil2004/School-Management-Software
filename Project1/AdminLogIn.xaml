<Window x:Class="Project1.AdminLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1"
        mc:Ignorable="d"
        Title="AdminLogIn" Height="450" Width="800" Background="#E5E5E5">
    <Grid>
        <TextBlock TextWrapping="Wrap" Background="#355070" Margin="0,0,605,0"/>

        <TextBlock TextWrapping="Wrap" Text="Username" FontSize="37"  Margin="263,129,342,243"/>
        <TextBlock TextWrapping="Wrap" Text="Password" FontSize="37"  Margin="263,217,342,155"/>
       
        <TextBox x:Name="AdminUsername" TextWrapping="Wrap"  Margin="499,134,68,248"/>
        <PasswordBox x:Name="AdminPassword" Margin="499,222,68,160"/>
        <Button  Background="#355070" Height="NaN" Margin="542,336,103,37" Width="NaN" Content="Submit" Foreground="White" FontSize="30" FontFamily="Berlin Sans FB" Click="Button_ClickSubmit" />

    </Grid>
</Window>
